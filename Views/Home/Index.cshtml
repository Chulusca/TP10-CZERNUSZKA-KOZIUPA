@{
    ViewData["Title"] = "Home Page";
}
@foreach (var serie in ViewBag.Series)
{
  <div class="container mt-5">
    <!-- Tarjeta Card para mostrar información de la serie -->
    <div class="card">
        <img src="@serie.ImagenSerie" class="card-img-top" alt="Foto de la Serie">
        <div class="card-body">
            <h5 class="card-title">@serie.Nombre</h5>
            <!-- Botón para abrir información de la serie en un modal -->
            <button class="btn btn-primary" data-toggle="modal" data-target="#serieModal" onclick="MostrarSerie(@serie.IdSerie)">Ver Información de la Serie</button>
            <!-- Botón para ver información de los actores-->
            <button class="btn btn-info" data-toggle="modal" data-target="#actoresModal">Ver Actores</button>
            <!-- Botón para ver información de las temporadas -->
            <button class="btn btn-success" data-toggle="modal" data-target="#temporadasModal">Ver Temporadas</button>
        </div>
    </div>
  </div>
}

<!-- Modal para mostrar información de la serie -->
<div class="modal fade" id="serieModal" tabindex="-1" aria-labelledby="serieModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="NombreSerie"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <img class = "img-fluid" id="FotoSerie">
        <p id="AnoInicio"></p>
        <p id="Sinopsis"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal para mostrar información de los actores -->
<div class="modal fade" id="actoresModal" tabindex="-1" role="dialog" aria-labelledby="actoresModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="actoresModalLabel">Información de los Actores</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- Aquí puedes agregar la información de los actores -->
        <p>Nombre del actor: </p>
        <p>Edad del actor: </p>
        <p>Personaje interpretado: </p>
        <!-- ... -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
<!-- Modal para mostrar información de las temporadas -->
<div class="modal fade" id="temporadasModal" tabindex="-1" role="dialog" aria-labelledby="temporadasModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="temporadasModalLabel">Información de las Temporadas</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- Aquí puedes agregar la información de las temporadas -->
        <p>Número de temporada: </p>
        <p>Fecha de estreno: </p>
        <p>Número de episodios: </p>
        <!-- ... -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
